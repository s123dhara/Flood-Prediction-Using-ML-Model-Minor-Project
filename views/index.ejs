      document.getElementById("person-name").innerText = name;
      document.getElementById("person-title").innerText = title;
      document.getElementById("person-quote").innerText = quote;
      document.getElementById("person-image").src = imgSrc;

      // Remove 'selected' class from all person items
      const personItems = document.querySelectorAll(".person-item");
      personItems.forEach(item => item.classList.remove("selected"));

      // Add 'selected' class to the clicked item
      element.classList.add("selected");
    }
  </script>

