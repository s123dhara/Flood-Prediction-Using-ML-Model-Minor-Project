    <button class="nav-button next" onclick="changeSlide(1)">&#10095;</button>
  </div>

  <script>
    let currentSlide = 0;
    const slides = document.querySelectorAll('.slides');
    const totalSlides = slides.length;
    const slideCaption = document.getElementById('slideCaption');
    const captionContainer = document.getElementById('captionContainer');
    const captionText = document.getElementById('captionText');

    // Array of captions for each slide
    const captions = [
      "Tennessee Flood Prediction and Resiliency Implementation",
      "Weather Analysis and Forecasting Techniques",
      "Real-Time Data Monitoring Systems",
      "Climate Change Impact on Local Communities"
    ];

    // Update the caption based on the current slide
    function updateCaption() {
      slideCaption.textContent = `${currentSlide + 1} - ${totalSlides}`;
      captionText.textContent = captions[currentSlide];
      captionContainer.style.animation = "none"; // Reset animation
      setTimeout(() => {
        captionContainer.style.animation = "slideIn 0.5s ease-in-out"; // Re-apply animation
      }, 10);
    }

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.remove('active-slide');
        if (i === index) slide.classList.add('active-slide');
      });
      updateCaption();
    }

    function changeSlide(direction) {
      currentSlide += direction;
      if (currentSlide >= slides.length) currentSlide = 0;
      if (currentSlide < 0) currentSlide = slides.length - 1;
      showSlide(currentSlide);
    }

    // Auto Slide Transition every 3 seconds
    setInterval(() => {
      changeSlide(1);
    }, 3000);

    // Initialize caption on load
    updateCaption();
  </script>
